<Page
    x:Class="UniversityEquations.Pages.Calculator.CalculatorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="24">
            <!-- Calculator Title -->
            <TextBlock Text="Calculator"
                     Style="{ThemeResource TitleLargeTextBlockStyle}"
                     FontSize="40"
                     FontWeight="Bold"
                     Margin="80,25,0,0"/>

            <!-- Exact Differential Equations Section -->
            <TextBlock Text="Exact Differential Equations"
                     Style="{ThemeResource SubtitleTextBlockStyle}"
                     FontWeight="SemiBold"
                     Opacity="0.9"
                     Margin="80,25,0,16"/>

            <!-- Input Card -->
            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  CornerRadius="4"
                  Margin="80,0,80,8"
                  Padding="16">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Instructions -->
                <TextBlock Text="Enter the coefficients for the equation Mdx + Ndy = 0"
                         Style="{ThemeResource BodyTextBlockStyle}"
                         Margin="0,0,0,16"/>

                <!-- M(x,y) Input -->
                <StackPanel Grid.Row="1" Margin="0,0,0,16">
                    <TextBlock Text="M(x,y):"
                             Style="{ThemeResource BodyStrongTextBlockStyle}"
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="MFunctionTextBox"
                            PlaceholderText="Enter M(x,y) function (e.g., 2xy + x²)"
                            Margin="0,0,0,8"/>
                </StackPanel>

                <!-- N(x,y) Input -->
                <StackPanel Grid.Row="2" Margin="0,0,0,16">
                    <TextBlock Text="N(x,y):"
                             Style="{ThemeResource BodyStrongTextBlockStyle}"
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="NFunctionTextBox"
                            PlaceholderText="Enter N(x,y) function (e.g., y² + xy)"
                            Margin="0,0,0,8"/>
                </StackPanel>

                <!-- Solve Button -->
                <Button Grid.Row="3"
                        Content="Solve Equation"
                        Style="{ThemeResource AccentButtonStyle}"
                        Click="SolveButton_Click"/>
            </Grid>

                <!-- Results Card -->
                <Grid x:Name="ResultsCard"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="4"
                    Margin="80,8,80,8"
                    Padding="16"
                    Visibility="Collapsed">
                    
                    <StackPanel>
                        <TextBlock Text="Results"
                                Style="{ThemeResource SubtitleTextBlockStyle}"
                                FontWeight="SemiBold"
                                Margin="0,0,0,16"/>

                        <!-- Exactness Check Result -->
                        <TextBlock Text="Is the equation exact?"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Margin="0,0,0,8"/>
                        <TextBlock x:Name="ExactnessResultText"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                Margin="0,0,0,16"/>

                        <!-- Partial Derivatives Section -->
                        <TextBlock Text="Partial Derivatives"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                    Text="∂M/∂y = " 
                                    FontFamily="Segoe UI"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Margin="0,0,8,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                    x:Name="DMdyText"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Margin="0,0,0,4"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                    Text="∂N/∂x = " 
                                    FontFamily="Segoe UI"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                    x:Name="DNdxText"
                                    Style="{ThemeResource BodyTextBlockStyle}"/>
                        </Grid>

                        <!-- Solution -->
                        <TextBlock Text="Solution:"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Margin="0,0,0,8"/>
                        <TextBlock x:Name="SolutionText"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>